<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.peisia.spring.mi.mapper.CardMapper">
	<!-- resultType 에 복수형(ArrayList 등)을 적는게 아님. 
	그냥 dto 단수의 경로를 적어야됨. -->
	<select id="getList" resultType="com.peisia.spring.mi.dto.CardDto">
		SELECT * from card_my
	</select>	
	<insert id="addCard">
		insert into card_my (job,grade) values (#{job},#{grade})
	</insert>	
	<insert id="partyAdd">
		insert into card_my_party (job,grade) values (#{job},#{grade})
	</insert>	
	<select id="getParty" resultType="com.peisia.spring.mi.dto.CardDto">
		SELECT * from card_my_party
	</select>
	<delete id="clearParty">
		truncate card_my_party
	</delete>
</mapper>
